{
  "name": "floret",
  "version": "1.1.2",
  "description": "Microservice Library for Node",
  "main": "index.js",
  "scripts": {
    "test": "npm run test-channel && npm run test-main && npm run test-subscription && exit ",
    "test-with-coverage": "nyc --reporter=text npm run test",
    "start": "node index",
    "test-main": "mocha --exit test/specs/floret-spec.js",
    "test-channel": "mocha --exit test/specs/floret-channel.spec.js",
    "test-subscription": "mocha --exit test/specs/floret-subscription.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Acxiom/floret.git"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true
    }
  },
  "eslintIgnore": [
    "test/floret-spec.js",
    "test/gateway.stubs.js"
  ],
  "author": "Clint Brown <clint.brown.atx@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "floret-gateway-kong": "^0.0.1",
    "ip": "^1.1.5",
    "jsdoc": "^3.5.5",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.0",
    "koa-router": "^7.2.0",
    "koa-send": "^4.1.3",
    "node-fetch": "^1.7.1",
    "path": "^0.12.7",
    "request": "^2.81.0",
    "request-promise": "^4.2.2",
    "rxjs": "^5.4.0",
    "swagger-jsdoc": "^1.9.7",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mockery": "^2.1.0",
    "nyc": "^11.4.1",
    "sinon": "^2.3.5",
    "supertest": "^3.1.0"
  },
  "keywords": [
    "microservice",
    "micro",
    "service",
    "micro-service",
    "node",
    "nodejs",
    "pubsub",
    "pub",
    "sub",
